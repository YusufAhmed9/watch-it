<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fillHeight="false" maxHeight="-Infinity" prefHeight="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WatChill.Search.HeaderController">
   <children>
      <VBox maxHeight="-Infinity" prefHeight="10.0" prefWidth="968.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="10.0">
               <children>
                  <ImageView fitHeight="53.0" fitWidth="200.0" onMouseClicked="#redirectToHome" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Logo.png" />
                     </image>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ImageView>
                  <HBox alignment="CENTER" HBox.hgrow="SOMETIMES">
                     <children>
                        <MenuButton fx:id="searchMenu" mnemonicParsing="false" style="-fx-background-color: #fff;" text="Movies">
                           <items>
                              <MenuItem mnemonicParsing="false" text="Movies" />
                              <MenuItem mnemonicParsing="false" text="Series" />
                              <MenuItem mnemonicParsing="false" text="Crew" />
                           </items>
                           <padding>
                              <Insets bottom="4.0" top="4.0" />
                           </padding>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MenuButton>
                        <TextField fx:id="searchInput" onKeyTyped="#handleSearch" prefHeight="33.0" prefWidth="435.0" promptText="Search WatChill..." style="-fx-background-radius: 5 0 0 5; -fx-background-color: #111; -fx-text-fill: #fff;">
                           <padding>
                              <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                           </padding>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#redirectToSearch" style="-fx-background-color: #333;">
                           <graphic>
                              <ImageView fx:id="bgImage" fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Home/loupe.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefWidth="200.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="signUpButton" minWidth="100.0" mnemonicParsing="false" onAction="#redirectToSignUp" styleClass="main-button" text="Sign Up">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="signInButton" minWidth="100.0" mnemonicParsing="false" onAction="#redirectToLogin" styleClass="main-button" text="Sign In">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <ImageView fx:id="profileIcon" fitHeight="42.0" fitWidth="42.0" onMouseClicked="#redirectToProfile" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Home/user-circle.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="searchResultsContainer" maxHeight="10.0" maxWidth="634.0" prefHeight="10.0" prefWidth="546.0" spacing="30.0" style="-fx-background-radius: 50; -fx-border-radius: 50;" visible="false">
                     <HBox.margin>
                        <Insets right="100.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
